@model Bookbox.DTOs.BookDTO

@{
    ViewData["Title"] = "Add New Book";
    Layout = "_DashboardLayout";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Add New Book</h1>
            <p class="text-muted">Create a new book entry in the catalog.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Books
        </a>
    </div>

    <div class="card shadow mb-4 border-0 rounded-3">
        <div class="card-header py-3 bg-gradient" style="background-color: #f8f9fa; border-bottom: none;">
            <h6 class="m-0 fw-bold text-primary"><i class="fas fa-book me-2"></i>Book Information</h6>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <!-- Basic Book Details Section -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Title" class="form-label fw-bold"><i class="fas fa-heading text-primary me-2"></i>Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Enter book title..." />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="Author" class="form-label fw-bold"><i class="fas fa-user-edit text-primary me-2"></i>Author</label>
                                    <input asp-for="Author" class="form-control" placeholder="Enter author name..." />
                                    <span asp-validation-for="Author" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="ISBN" class="form-label fw-bold"><i class="fas fa-barcode text-primary me-2"></i>ISBN</label>
                                    <input asp-for="ISBN" class="form-control" placeholder="Enter ISBN..." />
                                    <span asp-validation-for="ISBN" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="Publisher" class="form-label fw-bold"><i class="fas fa-building text-primary me-2"></i>Publisher</label>
                                    <input asp-for="Publisher" class="form-control" placeholder="Enter publisher..." />
                                    <span asp-validation-for="Publisher" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <!-- Classification & Pricing Section -->
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Genre" class="form-label fw-bold"><i class="fas fa-tags text-primary me-2"></i>Genre</label>
                                    <select asp-for="Genre" class="form-select" asp-items="Html.GetEnumSelectList<Bookbox.Constants.Genre>()">
                                        <option value="">Select Genre</option>
                                    </select>
                                    <span asp-validation-for="Genre" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="Format" class="form-label fw-bold"><i class="fas fa-book-open text-primary me-2"></i>Format</label>
                                    <select asp-for="Format" class="form-select" asp-items="Html.GetEnumSelectList<Bookbox.Constants.Format>()">
                                        <option value="">Select Format</option>
                                    </select>
                                    <span asp-validation-for="Format" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="Price" class="form-label fw-bold"><i class="fas fa-tag text-primary me-2"></i>Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">NPR</span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="PublicationDate" class="form-label fw-bold"><i class="fas fa-calendar-alt text-primary me-2"></i>Publication Date</label>
                                    <input asp-for="PublicationDate" type="date" class="form-control" />
                                    <span asp-validation-for="PublicationDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Description Section -->
                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold"><i class="fas fa-align-left text-primary me-2"></i>Description</label>
                            <textarea asp-for="Description" class="form-control" rows="6" placeholder="Enter book description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <!-- Additional Info Section -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Language" class="form-label fw-bold"><i class="fas fa-language text-primary me-2"></i>Language</label>
                                    <input asp-for="Language" class="form-control" placeholder="Enter language..." />
                                    <span asp-validation-for="Language" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-4">
                                    <label asp-for="Awards" class="form-label fw-bold"><i class="fas fa-award text-primary me-2"></i>Awards</label>
                                    <input asp-for="Awards" class="form-control" placeholder="Enter awards (optional)..." />
                                    <span asp-validation-for="Awards" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right Column - Cover Image & Inventory -->
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <h6 class="mb-0"><i class="fas fa-image me-2"></i>Cover & Inventory</h6>
                            </div>
                            <div class="card-body">
                                <div class="form-group mb-4">
                                    <label asp-for="ImageFile" class="form-label fw-bold">Cover Image</label>
                                    <div class="cover-upload-container text-center mb-3 p-3 border rounded bg-light">
                                        <div id="coverPreview" class="mb-3">
                                            <i class="fas fa-book fa-5x text-secondary"></i>
                                            <p class="mt-2 text-muted small">Preview will appear here</p>
                                        </div>
                                        <label for="ImageFile" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-upload me-1"></i> Choose Image
                                        </label>
                                        <input asp-for="ImageFile" class="form-control d-none" type="file" accept=".jpg,.jpeg,.png,.gif" />
                                    </div>
                                    <div class="form-text text-center">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Maximum: 5MB. Formats: JPG, PNG, GIF
                                    </div>
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                
                                <hr class="my-4">
                                
                                <div class="form-group mb-4">
                                    <label asp-for="Stock" class="form-label fw-bold"><i class="fas fa-layer-group text-primary me-2"></i>Digital Stock</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-database"></i></span>
                                        <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="Enter digital stock..." />
                                    </div>
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mb-4">
                                    <label asp-for="PhysicalStock" class="form-label fw-bold"><i class="fas fa-boxes text-primary me-2"></i>Physical Stock</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-box"></i></span>
                                        <input asp-for="PhysicalStock" class="form-control" type="number" min="0" placeholder="Enter physical stock..." />
                                    </div>
                                    <span asp-validation-for="PhysicalStock" class="text-danger"></span>
                                </div>
                                
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsComingSoon" class="form-check-input" type="checkbox" id="isComingSoon" />
                                    <label class="form-check-label" for="isComingSoon">
                                        <i class="fas fa-calendar-plus text-primary me-2"></i>Mark as Coming Soon
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <hr class="my-4">
                
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Create Book
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/book-form.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/book-form.js" asp-append-version="true"></script>
}