@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_DashboardLayout";
}

<!-- Include Chart.js library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Add reference to the staff dashboard CSS file -->
<link rel="stylesheet" href="~/css/staffDashboard.css" />

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Staff Dashboard</h1>
    </div>

    <!-- Revenue Section - Financial Performance -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-left-purple mb-4">
                <div class="card-body p-3">
                    <h5 class="card-title border-bottom pb-2">Revenue Overview</h5>
                    <div class="row">
                        <!-- Total Revenue -->
                        <div class="col-md-3">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Total Revenue</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">NPR @((ViewBag.TotalRevenue ?? 0).ToString("N0"))</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-money-bill-alt fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Daily Revenue -->
                        <div class="col-md-3">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Daily Revenue</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">NPR @((ViewBag.DailyRevenue ?? 0).ToString("N0"))</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Weekly Revenue -->
                        <div class="col-md-3">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Weekly Revenue</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">NPR @((ViewBag.WeeklyRevenue ?? 0).ToString("N0"))</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar-week fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Monthly Revenue -->
                        <div class="col-md-3">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Monthly Revenue</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">NPR @((ViewBag.MonthlyRevenue ?? 0).ToString("N0"))</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Orders Status Cards - All in one row -->
    <div class="row mb-4">
        <!-- Total Orders -->
        <div class="col-md-3 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Orders</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewBag.TotalOrders ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Completed Orders -->
        <div class="col-md-3 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed Orders</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewBag.CompletedOrders ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Orders -->
        <div class="col-md-3 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Orders</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewBag.PendingOrders ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cancelled Orders -->
        <div class="col-md-3 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Cancelled Orders</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewBag.CancelledOrders ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Books - Now after order stats -->
    <div class="row mb-4">
        <div class="col-md-3 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Books</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(ViewBag.TotalBooks ?? 0)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Orders</h6>
                    <a asp-controller="Staff" asp-action="Orders" class="btn btn-sm btn-primary shadow-sm">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in (ViewBag.RecentOrders as IEnumerable<dynamic> ?? new List<dynamic>()).Take(5))
                                {
                                    <tr>
                                        <td>#ORD-@order.OrderNumber</td>
                                        <td>@order.CustomerName</td>
                                        <td>NPR @order.Amount.ToString("N0")</td>
                                        <td>
                                            @if (order.Status == Bookbox.Constants.OrderStatus.Pending)
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                            else if (order.Status == Bookbox.Constants.OrderStatus.Completed)
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Cancelled</span>
                                            }
                                        </td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a asp-controller="Staff" asp-action="OrderDetails" asp-route-id="@order.OrderId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if ((ViewBag.RecentOrders as IEnumerable<dynamic>)?.Any() != true)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No recent orders found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>    <!-- Revenue Chart Row -->
    <div class="row mb-4">
        <!-- Revenue Line Chart -->
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-purple" id="revenue-overview-title">Revenue Trends (Monthly)</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="revenueDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="revenueDropdown">
                            <p class="dropdown-header">View By:</p>
                            <a class="dropdown-item revenue-timeframe-option" href="#" data-timeframe="daily">Daily</a>
                            <a class="dropdown-item revenue-timeframe-option" href="#" data-timeframe="weekly">Weekly</a>
                            <a class="dropdown-item revenue-timeframe-option" href="#" data-timeframe="monthly">Monthly</a>
                            <a class="dropdown-item revenue-timeframe-option" href="#" data-timeframe="yearly">Yearly</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 350px;">
                        <canvas id="revenueLineChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <!-- Books by Genre Pie Chart -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Books by Genre</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="genrePieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small" id="genre-legend">
                    </div>
                </div>
            </div>
        </div>
        <!-- Orders Line Chart -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary" id="orders-overview-title">Orders Overview (Monthly)</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="ordersDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="ordersDropdown">
                            <p class="dropdown-header">View By:</p>
                            <a class="dropdown-item timeframe-option" href="#" data-timeframe="daily">Daily</a>
                            <a class="dropdown-item timeframe-option" href="#" data-timeframe="weekly">Weekly</a>
                            <a class="dropdown-item timeframe-option" href="#" data-timeframe="monthly">Monthly</a>
                            <a class="dropdown-item timeframe-option" href="#" data-timeframe="yearly">Yearly</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="ordersLineChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        
    </div>

    <!-- Order Status Distribution -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Status Distribution</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="orderStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Selling Books -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top Selling Books</h6>
                </div>
                <div class="card-body">
                    <div class="chart-bar">
                        <canvas id="topSellingBooksChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Books by Format -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Books by Format</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie">
                        <canvas id="formatDonutChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Create a global object to store all the data needed by the charts
        var dashboardData = {
            orderData: {
                daily: @Html.Raw(Json.Serialize(ViewBag.DailyOrderCounts ?? new int[7])),
                weekly: @Html.Raw(Json.Serialize(ViewBag.WeeklyOrderCounts ?? new int[4])),
                monthly: @Html.Raw(Json.Serialize(ViewBag.MonthlyOrderCounts ?? new int[12])),
                yearly: @Html.Raw(Json.Serialize(ViewBag.YearlyOrderCounts ?? new int[5]))
            },
            revenueData: {
                daily: @Html.Raw(Json.Serialize(ViewBag.DailyRevenueData ?? new decimal[7])),
                weekly: @Html.Raw(Json.Serialize(ViewBag.WeeklyRevenueData ?? new decimal[4])),
                monthly: @Html.Raw(Json.Serialize(ViewBag.MonthlyRevenueData ?? new decimal[12])),
                yearly: @Html.Raw(Json.Serialize(ViewBag.YearlyRevenueData ?? new decimal[5]))
            },
            genreData: @Html.Raw(Json.Serialize(ViewBag.BooksByGenre ?? new List<object>())),
            formatData: @Html.Raw(Json.Serialize(ViewBag.BooksByFormat ?? new List<object>())),
            topSellingData: @Html.Raw(Json.Serialize(ViewBag.TopSellingBooks ?? new List<object>())),
            completedOrders: @(ViewBag.CompletedOrders ?? 0),
            pendingOrders: @(ViewBag.PendingOrders ?? 0),
            cancelledOrders: @(ViewBag.CancelledOrders ?? 0)
        };
    </script>
    <!-- Include the external JavaScript file -->
    <script src="~/js/staffDashboard.js" asp-append-version="true"></script>
}