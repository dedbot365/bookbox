@model IEnumerable<Bookbox.Models.Order>
@{
    ViewData["Title"] = "Order Management";
     Layout = "_DashboardLayout";
}

<div class="container py-4">
    <h1 class="mb-4">
        <i class="fas fa-shopping-bag me-2"></i>
        Order Management
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="ordersTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Redeem Code</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr class="@(order.Status == Bookbox.Constants.OrderStatus.Pending ? "table-warning" : order.Status == Bookbox.Constants.OrderStatus.Completed ? "table-success" : "table-secondary")">
                                <td>@order.OrderNumber</td>
                                <td>
                                    @order.User?.FirstName @order.User?.LastName
                                    <small class="d-block text-muted">@order.User?.Username</small>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>$@order.TotalAmount.ToString("F2")</td>
                                <td>
                                    <span class="badge bg-primary">@order.ClaimCode</span>
                                </td>
                                <td>
                                    @if (order.Status == Bookbox.Constants.OrderStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (order.Status == Bookbox.Constants.OrderStatus.Completed)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Cancelled</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    @if (order.Status == Bookbox.Constants.OrderStatus.Pending)
                                    {
                                        <a asp-action="OrderDetails" asp-route-id="@order.OrderId" asp-fragment="redeem" class="btn btn-sm btn-success ms-1">
                                            <i class="fas fa-check"></i> Redeem
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ordersTable').DataTable({
                order: [[2, 'desc']],
                language: {
                    search: "Search orders:"
                }
            });
        });
    </script>
}