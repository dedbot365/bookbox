@{
    string searchTerm = ViewData["SearchTerm"]?.ToString();
    string selectedStatus = ViewData["SelectedStatus"]?.ToString();
    string startDateFrom = ViewData["StartDateFrom"]?.ToString();
    string startDateTo = ViewData["StartDateTo"]?.ToString();
    string endDateFrom = ViewData["EndDateFrom"]?.ToString();
    string endDateTo = ViewData["EndDateTo"]?.ToString();
    string sortBy = ViewData["SortBy"]?.ToString() ?? "newest";
}

<!-- Filter Card -->
<div class="announcement-filters">
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-white">
                <i class="fas fa-filter me-2"></i>Filters
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" asp-controller="Announcement" method="get" id="filterForm">
                <!-- Preserve sorting -->
                <input type="hidden" name="sortBy" value="@sortBy" />
                
                <!-- Search -->
                <div class="mb-4">
                    <label for="searchTerm" class="form-label fw-bold">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" 
                               id="searchTerm" name="searchTerm" 
                               placeholder="Title or content..." value="@searchTerm">
                    </div>
                </div>
                
                <hr />
                
                <!-- Status -->
                <div class="mb-4">
                    <label for="status" class="form-label fw-bold">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="active" selected="@(selectedStatus == "active")">Active</option>
                        <option value="scheduled" selected="@(selectedStatus == "scheduled")">Scheduled</option>
                        <option value="expired" selected="@(selectedStatus == "expired")">Expired</option>
                        <option value="inactive" selected="@(selectedStatus == "inactive")">Inactive</option>
                    </select>
                </div>
                
                <!-- Start Date Range -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Start Date Range</label>
                    <div class="row g-2">
                        <div class="col">
                            <label for="startDateFrom" class="form-label small">From</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-calendar-alt text-muted"></i>
                                </span>
                                <input type="date" class="form-control border-start-0" 
                                       name="startDateFrom" id="startDateFrom" 
                                       value="@startDateFrom">
                            </div>
                        </div>
                        <div class="col">
                            <label for="startDateTo" class="form-label small">To</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-calendar-alt text-muted"></i>
                                </span>
                                <input type="date" class="form-control border-start-0" 
                                       name="startDateTo" id="startDateTo" 
                                       value="@startDateTo">
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- End Date Range -->
                <div class="mb-4">
                    <label class="form-label fw-bold">End Date Range</label>
                    <div class="row g-2">
                        <div class="col">
                            <label for="endDateFrom" class="form-label small">From</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-calendar-alt text-muted"></i>
                                </span>
                                <input type="date" class="form-control border-start-0" 
                                       name="endDateFrom" id="endDateFrom" 
                                       value="@endDateFrom">
                            </div>
                        </div>
                        <div class="col">
                            <label for="endDateTo" class="form-label small">To</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-calendar-alt text-muted"></i>
                                </span>
                                <input type="date" class="form-control border-start-0" 
                                       name="endDateTo" id="endDateTo" 
                                       value="@endDateTo">
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-3 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Apply Filters
                    </button>
                    <a href="@Url.Action("Index", "Announcement")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>