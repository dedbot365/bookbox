<div class="modal fade" id="orderCanceledModal" tabindex="-1" aria-labelledby="orderCanceledModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow border-0">
            <div class="modal-header" style="background-color: #dc3545; color: white;">
                <h5 class="modal-title" id="orderCanceledModalLabel">
                    <i class="fas fa-times-circle me-2"></i>Order Canceled
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4">
                    <div class="success-icon-container mb-3" style="background-color: rgba(220, 53, 69, 0.1);">
                        <i class="fas fa-times-circle fa-3x text-danger"></i>
                    </div>
                    <h4>Order #<span id="orderCanceledNumber"></span></h4>
                    <p class="text-muted" id="orderCanceledMessage">has been canceled successfully.</p>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <a href="@Url.Action("Index", "Shop")" class="btn btn-primary">
                    <i class="fas fa-shopping-cart me-1"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>