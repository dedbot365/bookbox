@model Bookbox.DTOs.ProfileDTO

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">My Profile</h3>
                        <div>
                            <a asp-action="EditProfile" class="btn btn-light btn-sm me-2">Edit Profile</a>
                            <a asp-action="ChangePassword" class="btn btn-light btn-sm">Change Password</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="Profile" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; margin: auto;">
                                    <i class="fas fa-user fa-4x text-secondary"></i>
                                </div>
                            }
                            <p class="text-muted mb-1">Member since @Model.RegisteredDate.ToString("MMMM yyyy")</p>
                            <p class="mb-0"><i class="fas fa-shopping-bag me-2"></i>@Model.SuccessfulOrderCount successful orders</p>
                        </div>
                        <div class="col-md-9">
                            <h4 class="mb-3">@Model.FirstName @Model.LastName</h4>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Username:</strong></p>
                                    <p>@Model.Username</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Email:</strong></p>
                                    <p>@Model.Email</p>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Phone Number:</strong></p>
                                    <p>@(string.IsNullOrEmpty(Model.ContactNo) ? "Not provided" : Model.ContactNo)</p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Gender:</strong></p>
                                    <p>@Model.Gender</p>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <p class="mb-1"><strong>Date of Birth:</strong></p>
                                <p>@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("MMMM d, yyyy") : "Not provided")</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <h4 class="mb-3">Address Information</h4>
                    @if (!string.IsNullOrEmpty(Model.Address1))
                    {
                        <div class="row">
                            <div class="col-md-12 mb-2">
                                <p class="mb-1"><strong>Address Line 1:</strong></p>
                                <p>@Model.Address1</p>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Address2))
                            {
                                <div class="col-md-12 mb-2">
                                    <p class="mb-1"><strong>Address Line 2:</strong></p>
                                    <p>@Model.Address2</p>
                                </div>
                            }
                            <div class="col-md-4 mb-2">
                                <p class="mb-1"><strong>City:</strong></p>
                                <p>@Model.City</p>
                            </div>
                            <div class="col-md-4 mb-2">
                                <p class="mb-1"><strong>State:</strong></p>
                                <p>@Model.State</p>
                            </div>
                            <div class="col-md-4 mb-2">
                                <p class="mb-1"><strong>Country:</strong></p>
                                <p>@Model.Country</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No address information available. <a asp-action="EditProfile" class="alert-link">Add your address</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
