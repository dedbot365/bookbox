@model IEnumerable<Bookbox.DTOs.AnnouncementDto>

@{
    ViewData["Title"] = "Announcements";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-bullhorn me-2"></i>Announcements</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">There are no active announcements at this time.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@item.Title</h5>
                            <span class="badge bg-primary">Active until @(item.EndDate?.ToString("MMM dd, yyyy") ?? "No end date")</span>
                        </div>
                        <div class="card-body">
                            <p>@item.Content</p>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Posted by @item.UserName on @item.StartDate.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>