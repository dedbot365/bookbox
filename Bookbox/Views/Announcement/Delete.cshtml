@model Bookbox.Models.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container-fluid mt-4">
    <h1 class="h3 mb-2 text-gray-800">Delete Announcement</h1>
    <p class="mb-4 text-danger">Are you sure you want to delete this announcement?</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold">Announcement Details</h6>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <dl class="row">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Model.Title</dd>
                    
                    <dt class="col-sm-3">Content</dt>
                    <dd class="col-sm-9">@Html.Raw(Model.Content)</dd>
                    
                    <dt class="col-sm-3">Start Date</dt>
                    <dd class="col-sm-9">@Model.StartDate.ToString("MMM dd, yyyy")</dd>
                    
                    <dt class="col-sm-3">End Date</dt>
                    <dd class="col-sm-9">@(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("MMM dd, yyyy") : "No end date")</dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Created By</dt>
                    <dd class="col-sm-9">@(Model.User?.Username ?? "Unknown")</dd>
                    
                    <dt class="col-sm-3">Last Modified</dt>
                    <dd class="col-sm-9">@Model.LastModified.ToString("MMM dd, yyyy HH:mm")</dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.AnnouncementId" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete Announcement</button>
                </div>
            </form>
        </div>
    </div>
</div>