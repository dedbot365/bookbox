@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h2>Admin Dashboard</h2>
        </div>
        <div class="card-body">
            <h3>System Administration</h3>
            <p>This page is only accessible to administrators. Here you can manage users, books, and system settings.</p>
            
            <div class="mt-4">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="card-title">User Management</h5>
                                <p class="card-text">Manage system users and their roles.</p>
                                <a href="#" class="btn btn-primary">Manage Users</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="card-title">Book Management</h5>
                                <p class="card-text">Add, edit, or remove books from the system.</p>
                                <a href="#" class="btn btn-primary">Manage Books</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="card-title">System Settings</h5>
                                <p class="card-text">Configure application settings.</p>
                                <a href="#" class="btn btn-primary">Settings</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>