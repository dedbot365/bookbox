@model IEnumerable<Bookbox.Models.User>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_DashboardLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg border-0 rounded-3 mb-4">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-users fa-2x me-3"></i>
                        <h2 class="mb-0 fw-bold">Manage Users</h2>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="usersTable">
                            <thead class="bg-light text-dark">
                                <tr>
                                    <th class="px-4 py-3">User</th>
                                    <th class="py-3">Email</th>
                                    <th class="py-3">Contact</th>
                                    <th class="py-3">Registered Date</th>
                                    <th class="py-3">Orders</th>
                                    <th class="py-3">Role</th>
                                    <th class="py-3 text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(user.ImageUrlText))
                                                {
                                                    <img src="@user.ImageUrlText" alt="Profile" class="rounded-circle me-3 shadow-sm" style="width: 45px; height: 45px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded-circle text-white d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 45px; height: 45px;">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <h6 class="mb-0 fw-semibold">@user.FirstName @user.LastName</h6>
                                                    <small class="text-muted">@@@user.Username</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">@user.Email</td>
                                        <td class="py-3">@(string.IsNullOrEmpty(user.ContactNo) ? "Not provided" : user.ContactNo)</td>
                                        <td class="py-3"><span class="badge bg-light text-dark">@user.RegisteredDate.ToString("MMM d, yyyy")</span></td>
                                        <td class="py-3">
                                            <span class="badge bg-@(user.SuccessfulOrderCount > 0 ? "success" : "secondary")">@user.SuccessfulOrderCount</span>
                                        </td>
                                        <td class="py-3 role-cell" data-user-id="@user.UserId.ToString("D")">
                                            <select class="form-select form-select-sm role-select border-0 bg-transparent" 
                                                    data-user-id="@user.UserId.ToString("D")" 
                                                    data-username="@user.Username">
                                                <option value="2" selected="@(user.UserType == Bookbox.Constants.UserType.Member)">Member</option>
                                                <option value="3" selected="@(user.UserType == Bookbox.Constants.UserType.Staff)">Staff</option>
                                            </select>
                                        </td>
                                        <td class="py-3 text-center">
                                            <button type="button" class="btn btn-sm btn-primary rounded-pill view-user-btn" 
                                                    data-bs-toggle="tooltip" title="View Details"
                                                    data-user-id="@user.UserId.ToString("D")">
                                                <i class="fas fa-eye me-1"></i> Details
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-gradient-primary text-white">
                <h5 class="modal-title" id="userDetailsModalLabel">User Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4" id="userImageContainer">
                    <!-- User image will be inserted here -->
                </div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Username</h6>
                            <p class="mb-0 fw-semibold fs-5" id="detailUsername"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Full Name</h6>
                            <p class="mb-0 fw-semibold fs-5" id="detailFullName"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Email</h6>
                            <p class="mb-0" id="detailEmail"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Contact</h6>
                            <p class="mb-0" id="detailContact"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Date of Birth</h6>
                            <p class="mb-0" id="detailDOB"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Gender</h6>
                            <p class="mb-0" id="detailGender"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Role</h6>
                            <p class="mb-0" id="detailRole"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Registered Date</h6>
                            <p class="mb-0" id="detailRegisteredDate"></p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="bg-light rounded p-3">
                            <h6 class="text-muted small text-uppercase">Orders Completed</h6>
                            <p class="mb-0" id="detailOrders"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white border-0">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-3">
                    <i class="fas fa-check-circle text-success fa-4x mb-3"></i>
                    <h4>Role Updated Successfully</h4>
                    <p id="successMessage" class="mb-0"></p>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 justify-content-center">
                <button type="button" class="btn btn-success rounded-pill px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4D4490, #554a96);
        }
        
        .role-select {
            transition: all 0.2s ease;
            cursor: pointer;
        }
        
        .role-select:focus {
            box-shadow: none;
        }
        
        .role-select:hover {
            background-color: #f8f9fa !important;
        }
        
        #usersTable tr {
            transition: all 0.2s ease;
        }
        
        #usersTable tr:hover {
            background-color: #f8f9fa;
        }
        
        .role-cell {
            position: relative;
        }
    </style>
}

@section Scripts {
    <script src="~/js/admin/manageUsers.js" asp-append-version="true"></script>
}

